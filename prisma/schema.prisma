generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model payment {
  id            String   @id @default(uuid())
  user_id       String  @default("")
  username      String   
  price         Float
  day           Int
  subjects Json   @default("[]")
  sheets Json @default("[]")
  status        Boolean
  activate      Boolean
  activate_code String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}
